<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:id="@+id/mainCoordinatorLayout">

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical">

		<include
			layout="@layout/toolbar"/>

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:text="Please Input your classes on each day"/>

		<HorizontalScrollView
			android:layout_height="wrap_content"
			android:layout_width="match_parent">

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent">

				<ScrollView
					android:layout_height="match_parent"
					android:layout_width="match_parent">

					<LinearLayout
						android:layout_height="match_parent"
						android:layout_width="match_parent"
						android:orientation="horizontal">

						<LinearLayout
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:orientation="vertical"
							android:layout_weight="5.0">

							<TextView
								android:layout_height="wrap_content"
								android:text="Monday"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:layout_width="wrap_content"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m1"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m2"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m3"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m4"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m5"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m6"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m7"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m8"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/m9"
								android:inputType="text"/>

						</LinearLayout>

						<LinearLayout
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:orientation="vertical"
							android:layout_weight="5.0">

							<TextView
								android:layout_height="wrap_content"
								android:text="Tuesday"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:layout_width="wrap_content"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t1"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t2"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t3"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t4"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t5"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t6"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t7"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t8"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/t9"
								android:inputType="text"/>

						</LinearLayout>

						<LinearLayout
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:orientation="vertical"
							android:layout_weight="5.0">

							<TextView
								android:layout_height="wrap_content"
								android:text="Wednesday"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:layout_width="wrap_content"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/w1"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/w2"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/w3"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/w4"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/w5"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/w6"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
