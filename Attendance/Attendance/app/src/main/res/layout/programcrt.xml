								android:inputType="text"/>

						</LinearLayout>

						<LinearLayout
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:orientation="vertical"
							android:layout_weight="5.0">

							<TextView
								android:layout_height="wrap_content"
								android:text="Thursday"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:layout_width="wrap_content"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th1"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th2"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th3"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th4"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th5"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th6"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th7"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th8"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/th9"
								android:inputType="text"/>

						</LinearLayout>

						<LinearLayout
							android:layout_height="match_parent"
							android:layout_width="match_parent"
							android:orientation="vertical"
							android:layout_weight="5.0">

							<TextView
								android:layout_height="wrap_content"
								android:text="Friday"
								android:textAppearance="?android:attr/textAppearanceMedium"
								android:layout_width="wrap_content"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f1"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f2"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f3"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f4"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f5"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f6"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f7"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f8"
								android:inputType="text"/>

							<EditText
								android:layout_height="wrap_content"
								android:ems="10"
								android:layout_width="wrap_content"
								android:id="@+id/f9"
								android:inputType="text"/>

							<Button
								android:layout_height="wrap_content"
								android:text="Save"
								android:layout_width="wrap_content"
								android:layout_gravity="right"
								android:onClick="save"
								android:layout_margin="10dp"/>

						</LinearLayout>

					</LinearLayout>

				</ScrollView>

			</LinearLayout>

		</HorizontalScrollView>

	</LinearLayout>

</android.support.design.widget.CoordinatorLayout>

