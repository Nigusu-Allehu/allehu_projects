<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:id="@+id/mainCoordinatorLayout">

	<ScrollView
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<include
				layout="@layout/toolbar"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Security"
				android:layout_width="match_parent"
				android:textSize="18sp"
				android:paddingLeft="10dp"
				android:paddingBottom="3dp"
				android:textStyle="bold"/>

			<View
				android:layout_height="2dp"
				android:background="#000000"
				android:layout_width="match_parent"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:onClick="lock">

				<TextView
					android:layout_height="wrap_content"
					android:text="Lock this app with Password"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="match_parent"
					android:padding="10dp"
					android:layout_weight="1.0"
					android:id="@+id/lock_txt"/>

				<CheckBox
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:paddingRight="10dp"
					android:id="@+id/lock__ch"/>

			</LinearLayout>

			<TextView
				android:layout_height="wrap_content"
				android:text="General"
				android:layout_width="match_parent"
				android:paddingLeft="10dp"
				android:paddingBottom="3dp"
				android:textSize="18sp"
				android:textStyle="bold"/>

			<View
				android:layout_height="2dp"
				android:background="#000000"
				android:layout_width="match_parent"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Aend message"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:padding="11dp"
				android:id="@+id/onA"
				android:onClick="onA"/>

			<View
				android:layout_height="1dp"
				android:background="?android:attr/dividerVertical"
				android:layout_width="match_parent"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Aend message"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:padding="11dp"
				android:id="@+id/onP"
				android:onClick="onP"/>

			<View
				android:layout_height="1dp"
				android:background="?android:attr/dividerVertical"
				android:layout_width="match_parent"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="RedList"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:id="@+id/red_list"
				android:onClick="red"
				android:padding="10dp"/>

			<View
				android:layout_height="1dp"
				android:background="?android:attr/dividerVertical"
				android:layout_width="match_parent"/>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="horizontal">

				<TextView
					android:layout_height="wrap_content"
					android:text="Clear Data for new Year"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="match_parent"
					android:padding="10dp"
					android:layout_weight="1.0"
					android:id="@+id/clr"
					android:onClick="clear"/>

			</LinearLayout>

			<View
				android:layout_height="1dp"
				android:background="?android:attr/dividerVertical"
				android:layout_width="match_parent"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Uninstall this app"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:onClick="un"
				android:padding="10dp"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Make Final Result"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:onClick="fnl"
				android:padding="10dp"/>


			<TextView
				android:layout_height="wrap_content"
				android:text="More"
				android:layout_width="match_parent"
				android:textSize="18sp"
				android:paddingBottom="3dp"
				android:textStyle="bold"
				android:paddingLeft="10dp"/>

			<View
				android:layout_height="2dp"
				android:background="#000000"
				android:layout_width="match_parent"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Version 1.0"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="match_parent"
				android:padding="10dp"/>

		</LinearLayout>

	</ScrollView>

</android.support.design.widget.CoordinatorLayout>

